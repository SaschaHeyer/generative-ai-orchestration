<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Grid</title>
    <link href="/css/tailwind.output.css" rel="stylesheet">
</head>
<body>
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-4">Recipes</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% recipes.forEach(recipe => { %>
                <a href="/recipe/<%= recipe.id %>" class="block bg-white shadow-md rounded-lg overflow-hidden">
                    <img src="<%= recipe.imageUrl %>" alt="<%= recipe.recipe_title %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold"><%= recipe.recipe_title %></h2>
                        <p class="text-gray-600 mt-2"><%= recipe.recipe_description %></p>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>
</body>
</html>
